<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Categories</title>
    <style>
        /* General Styles */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f9f9f9;
            color: #333;
        }

        h1 {
            text-align: center;
            margin: 20px 0;
            color: #444;
        }

        a {
            text-decoration: none;
            color: #007bff;
        }

        a:hover {
            text-decoration: underline;
        }

        /* Container */
        .container {
            width: 80%;
            margin: 0 auto;
            background: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            padding: 20px;
        }

        /* Categories List */
        .categories-list {
            list-style-type: none;
            padding: 0;
        }

        .category-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid #ddd;
            padding: 15px 0;
        }

        .category-item:last-child {
            border-bottom: none;
        }

        .category-info h3 {
            margin: 0;
            color: #222;
        }

        .category-info h4 {
            margin: 5px 0;
            font-weight: normal;
            color: #555;
        }

        .category-actions {
            display: flex;
            gap: 10px;
        }

        .category-actions form {
            display: inline;
        }

        button {
            background-color: #dc3545;
            color: #fff;
            border: none;
            padding: 8px 12px;
            cursor: pointer;
            border-radius: 4px;
            font-size: 14px;
        }

        button:hover {
            background-color: #c82333;
        }

        .btn-primary {
            background-color: #007bff;
            color: #fff;
            padding: 8px 12px;
            border-radius: 4px;
            font-size: 14px;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <h1>All Categories</h1>
    <div class="container">
        <a href="/admin/categories/new" class="btn-primary">Create New Category</a>
        <ul class="categories-list">
            <% categories.forEach((category) => { %>
                <li class="category-item">
                    <div class="category-info">
                        <h3><%= category.name %></h3>
                        <h4><%= category.description %></h4>
                    </div>
                    <div class="category-actions">
                        <a href="/categories/edit/<%= category._id %>" class="btn-primary">Edit</a>
                        <form action="/categories/delete/<%= category._id %>" method="POST">
                            <button type="submit">Delete</button>
                        </form>
                    </div>
                </li>
            <% }); %>
        </ul>
    </div>
</body>
</html>
